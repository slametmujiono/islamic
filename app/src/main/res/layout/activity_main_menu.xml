<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    tools:context=".MainMenuActivity">

    <TextView
        android:id="@+id/txtArabLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="وَسَبِّحُوهُ بُكْرَةً وَأَصِيلًا"
        android:fontFamily="@font/arab"
        android:textColor="@color/colorWhite"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/txtArtiLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“Dan bertasbihlah kepada-Nya diwaktu pagi dan sore.[ QS. Al-Ahzab : 42 ]”"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtArabLabel"
        android:fontFamily="@font/nextartbold"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:text="Universitas Pelita Bangsa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtArabLabel"
        android:fontFamily="@font/nextartbold"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:text="&#169;2019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtArabLabel"
        android:fontFamily="@font/nextartbold"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/buttonDzikirPagi"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_exit"
        android:drawableTop="@drawable/pagi"
        android:fontFamily="@font/nextartbold"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:text="Dzikir Pagi"
        android:textColor="@color/colorWhite"
        android:textSize="25dp"
        android:onClick="clickDzikirPagi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDzikirSore"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_exit"
        android:drawableTop="@drawable/sore"
        android:fontFamily="@font/nextartbold"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:text="Dzikir Sore"
        android:onClick="clickDzikirSore"
        android:textColor="@color/colorWhite"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonDzikirPagi" />



