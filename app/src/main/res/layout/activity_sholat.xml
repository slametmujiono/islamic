<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sholat1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sholat"
    tools:context=".Sholat">

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorSecondaryBlue"
        android:padding="@dimen/padding">

        <Spinner
            android:id="@+id/kota"
            android:background="@drawable/putih"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:layout_marginBottom="@dimen/vertical_margin"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/nextart"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Tanggal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/topPanel"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:fontFamily="@font/nextartbold"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="Subuh"/>

            <TextView
                android:id="@+id/tv_subuh"
                android:textColor="@color/blue"
                android:fontFamily="@font/nextartbold"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:hint="--:--"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:fontFamily="@font/nextartbold"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="Dzuhur"/>

            <TextView
                android:id="@+id/tv_dzuhur"
                android:textColor="@color/blue"
                android:fontFamily="@font/nextartbold"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:hint="--:--"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:fontFamily="@font/nextartbold"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="Ashar"/>

            <TextView
                android:id="@+id/tv_ashar"
                android:textColor="@color/blue"
                android:fontFamily="@font/nextartbold"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:hint="--:--"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:fontFamily="@font/nextartbold"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="Maghrib"/>

            <TextView
                android:id="@+id/tv_maghrib"
                android:textColor="@color/blue"
                android:fontFamily="@font/nextartbold"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:hint="--:--"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:fontFamily="@font/nextartbold"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="Isya"/>

            <TextView
                android:id="@+id/tv_isya"
                android:textColor="@color/blue"
                android:fontFamily="@font/nextartbold"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:hint="--:--"/>

        </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="Universitas Pelita Bangsa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtArabLabel"
        android:fontFamily="@font/nextartbold"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="&#169;2019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtArabLabel"
        android:fontFamily="@font/nextartbold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"/>

</LinearLayout>